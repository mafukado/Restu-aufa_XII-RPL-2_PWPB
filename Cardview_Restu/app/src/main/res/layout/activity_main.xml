<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGraylight">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="297dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/bgheader"
            android:orientation="vertical">

            <TextView
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="40dp"
                android:text="Muchamad Rizkyansyah"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/ml"/>

            <TextView
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="2dp"
                android:text="USD Wallet"
                android:textColor="@color/white"
                android:fontFamily="@font/ml"/>

            <ImageView
                android:layout_width="73dp"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-50dp"
                android:layout_marginRight="150dp"
                android:src="@drawable/userpic" />


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="381dp"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Main Menus"
                android:fontFamily="@font/mm"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/iclist" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-59dp"
                    android:layout_marginTop="70dp"
                    android:text="Review"
                    android:textStyle="bold"
                    android:fontFamily="@font/mr"/>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="35dp"
                    android:src="@drawable/icnet" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-59dp"
                    android:layout_marginTop="70dp"
                    android:text="Network"
                    android:textStyle="bold"
                    android:fontFamily="@font/mr"/>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="35dp"
                    android:src="@drawable/icplug" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-59dp"
                    android:layout_marginTop="70dp"
                    android:text="Plugins"
                    android:textStyle="bold"
                    android:fontFamily="@font/mr"/>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="35dp"
                    android:src="@drawable/icapps" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-51dp"
                    android:layout_marginTop="70dp"
                    android:text="Apps"
                    android:textStyle="bold"
                    android:fontFamily="@font/mr"/>

            </GridLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="431dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="157dp"
            android:layout_height="183dp"
            android:layout_marginLeft="130dp"
            android:src="@drawable/icguide" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Need a Guide?"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/ml"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="9dp"
            android:text="We will give direction"
            android:fontFamily="@font/mr"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="to the new user"
            android:fontFamily="@font/mr"/>

        <Button
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/bgbtnguide"
            android:fontFamily="@font/mm"
            android:text="Guide Me"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />
    </LinearLayout>



</LinearLayout>